    rootMargin: "-50px 0px 0px 0px",
  };

  const observer = new IntersectionObserver(function (entries, observer) {
    entries.forEach((entry) => {
      entry.target.classList.toggle("unstuck", entry.isIntersecting);
      // console.log(entry);
    });
  }, options);

  observer.observe(nav);
}

</script>