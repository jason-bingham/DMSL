<style lang="scss">
  @use "../styles/abstracts/" as *;

.nav {
  --flex-column-gap: #{size(48)};
  z-index: 100;
  width: 100%;
  outline: 10px solid var(--clr-bg);
  padding: 2px 0;

  a {
    transition: ease-in-out 400ms;
    padding-inline: 0.5rem;
    border-radius: 0.25rem;;
  }

  a:is(:hover, :focus) {
    scale: (0.95);
    font-weight: 400;
    opacity: 0.85;
  }
}

.primary-nav {
  transition: outline 500ms;
  font-weight: 300;
  font-size: 16px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: var(--clr-nav-bg);
  color: var(--clr-nav-text);

  &.unstuck {
    outline: none;
  }
}

svg {
  fill: var(--clr-nav-text);
}

.nav-icons {
  width: 126px;
    --flex-column-gap: 0.35rem;
    justify-content: center;
    align-items: center;
}

.ig-logo {
  height: 30px;
}

.nav-logo {
  height: 70px;
  position: relative;
  top: 5px;
  transition: 500ms;
  opacity: 1;
  left: 0;
}

.primary-nav.unstuck .nav-logo {
  opacity: 0;
  left: -10rem;
}

.active {
  background: var(--clr-nav-text);
  color: var(--clr-nav-bg);
}

// HAMBURGER MENU

.preload * {
  transition: none !important;
  animation: none !important;
}

.nav-hamburger {
  background: transparent;
  border: 0;
  cursor: pointer;
  position: absolute;
  left: calc(50% - 15px);
  top: 5px;
  z-index: 9999;
  display: none;
}

.nav-hamburger .nav-line {
  transition: stroke 1s;
  stroke: clr(neutral, 900);
}

.nav-hamburger.nav-links-open .bottom,
.nav-hamburger.nav-links-open .top {
  animation: to-dots 0.5s forwards;
}

.bottom,
.top {
  animation: to-dots-r 0.5s both 0.5s;
}

.nav-hamburger.nav-links-open .middle {
  animation: to-dots-mid 0.5s forwards;
  stroke-dasharray: 70;
}

.middle {
  animation: to-dots-mid-r 0.5s both 0.5s;
  stroke-dasharray: 70;
}

.nav-hamburger.nav-links-open .x {
  animation: to-x 0.5s forwards 0.5s;
}

.x {
  animation: to-x-r 0.5s both;
}

.x {
  stroke-dasharray: 0.1 70;
}

@keyframes to-dots {
  0% {
    stroke-dashoffset: 0;
    stroke-dasharray: 70 70;
  }
  100% {
    stroke-dashoffset: -15;
    stroke-dasharray: 0.1 70;
  }
}

@keyframes to-dots-r {
  100% {
    stroke-dashoffset: 0;
    stroke-dasharray: 70 70;
  }
  0% {
    stroke-dashoffset: -15;
    stroke-dasharray: 0.1 70;
  }
}

@keyframes to-x {
  0% {
    stroke-dasharray: 0.1 70;
  }
  100% {
    stroke-dasharray: 70 70;
  }
}

@keyframes to-x-r {
  100% {
    stroke-dasharray: 0.1 70;
  }
  0% {
    stroke-dasharray: 70 70;
  }
}

@keyframes to-dots-mid {
  0% {
    stroke-dasharray: 70;
    stroke-dashoffset: 0;
  }
  100% {
    stroke-dasharray: 0.1 70;
    stroke-dashoffset: -34.9;
  }
}

@keyframes to-dots-mid-r {
  100% {
    stroke-dasharray: 70;
    stroke-dashoffset: 0;
  }
  0% {
    stroke-dasharray: 0.1 70;
    stroke-dashoffset: -34.9;
  }
}

.nav-hamburger {
  transition: 1s;
}

@media (max-width: 35em) {
  .nav-hamburger {
    display: block;
  }
  #nav-links {
    opacity: 0;
    position: absolute;
    display: block;
    top: 40px;
    left: -100%;
    transition: opacity 750ms;
    background-color: rgba(clr(primary, 400), 0.9);
    line-height: 2;
    padding: 0.75rem;
    width: 100%;
    text-align: center;
  }
  #nav-links.nav-links-open {
    opacity: 1;
    left: 0;
  }
}

</style>

<script>
  const navHam = document.querySelector(".nav-hamburger");
const navMenu = document.querySelector("#nav-links");

navHam.addEventListener("click", () => {
  console.log("clicked");
  const isOpen = navHam.getAttribute("aria-expanded");
  if (isOpen === "false") {
    navHam.setAttribute("aria-expanded", true);
    navMenu.setAttribute("data-visible", true);
    navHam.classList.add("nav-links-open");
    navMenu.classList.add("nav-links-open");
  } else {
    navHam.setAttribute("aria-expanded", false);
    navMenu.setAttribute("data-visible", false);
    navHam.classList.remove("nav-links-open");
    navMenu.classList.remove("nav-links-open");
  }
  navHam.classList.remove("preload");
});

// NAV

const { pathname } = window.location;
console.log(pathname);
const activeNavElement = document.querySelector(
  `nav a[href="${pathname}"]`
);

if (activeNavElement) {
  activeNavElement.classList.add("active");
}

